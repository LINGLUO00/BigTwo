<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E6F7FF"
    tools:context="view.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏设置"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/panel_background"
        android:padding="16dp">

        <!-- 动画速度设置 -->
        <TextView
            android:id="@+id/tv_card_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动画速度: 中等"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/sb_card_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="24dp"/>

        <!-- 音效设置 -->
        <CheckBox
            android:id="@+id/cb_sound_effects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏音效"
            android:textSize="18sp"
            android:checked="true"
            android:layout_marginBottom="16dp"/>

        <!-- 震动设置 -->
        <CheckBox
            android:id="@+id/cb_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="震动反馈"
            android:textSize="18sp"
            android:checked="true"
            android:layout_marginBottom="16dp"/>

        <!-- 自动保存设置 -->
        <CheckBox
            android:id="@+id/cb_auto_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自动保存游戏"
            android:textSize="18sp"
            android:checked="true"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重置"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background_secondary"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background_secondary"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>
</LinearLayout> 